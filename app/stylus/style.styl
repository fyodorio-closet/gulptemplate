body
    background #4A5C68

.container
    perspective 300px
    perspective-origin 90% 60%
    position relative
    background none
    width 500px
    height 500px
    margin auto

.rotating-box
    position absolute
    background none
    width 100%
    height 100%
    top -10%
    left 10%
    transform rotate3D(1,-1,1,30deg)
    transform-style preserve-3d

.back-face
    position absolute
    width 70%
    height 40%
    background gray
    transform rotatex(120deg)
    transform-origin bottom

.front-face
    position absolute
    width 70%
    height 40%
    top 40%
    background white
    z-index 3

.base
    position absolute
    width 70%
    height 40%
    top 80%
    background darkgray
    transform rotatex(-120deg)
    transform-origin top

.main-title
    position absolute
    width 100%
    height 20%
    background #FA2021

.year
    font-family 'Montserrat', sans-serif
    font-size 28px
    padding-top 3px
    padding-left 8px
    float left
    color white

.month
    font-family 'Montserrat', sans-serif
    font-size 24px
    padding-top 4px
    padding-right 10px
    float right
    color white

table
    position absolute
    border-collapse collapse
    width 95%
    height 70%
    top 25%
    left 2.5%
    border 1px solid black
    border-color black
    text-align left
    font-size 12px
    font-family 'Montserrat', sans-serif

tr,td
    border 1px solid black

td:nth-child(6), td:nth-child(7)
    background #4285F4
    color white

td
    vertical-align top
    
tr:first-child
    for $i in (1..6)
       td:nth-child({$i})
          color darkgray
          
tr:last-child
    for $i in (3..7)
       td:nth-child({$i})
          color darkgray          
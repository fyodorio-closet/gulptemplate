background-color = #F5D5C9
main-color-1 = #FF3872
main-color-2 = #328AB0

body
  background background-color

.container
  position relative
  width 500px
  height 500px
  margin auto
  background background-color

.left-half, .inner-sector, .outer-sector, .mid-sector, .curl-1, .curl-2, .curl-3, .curl-4, .curl-5, .text, .letter-rotate
  position absolute

.left-half
  position absolute
  background main-color-1
  width 40%
  height 80%
  top 5%
  left 6.5%
  border 12px solid background-color
  border-radius 80% 20% 20% 80%/50% 10% 10% 50% 
.inner-sector
    width 94%
    height 94%
    left 3%
    top 3%
    background main-color-1
    border-radius 80% 20% 20% 80%/50% 10% 10% 50% 
    clip-path: polygon(0 40%, 100% 40%, 100% 100%, 0% 100%);
.mid-sector
    width 94%
    height 94%
    left 6%
    top -5%
    background main-color-2
    border-radius 80% 20% 20% 80%/50% 10% 10% 50% 
    z-index 1
    clip-path: polygon(0 60%, 80% 60%, 80% 100%, 0% 100%);
.outer-sector
    width 94%
    height 94%
    left 3%
    top -12.9%
    background main-color-1
    border-radius 80% 20% 20% 80%/50% 10% 10% 50% 
    z-index 2
    clip-path: polygon(0 60%, 100% 60%, 100% 100%, 0% 100%);
curls(bot-offset, left-offset)
    position absolute
    bottom bot-offset
    left left-offset
    background main-color-2
    width 34%
    height 17%
    border-radius 50% 50% 50% 50%
    z-index 1
.curl-1
    curls(0%, 66%)
.curl-2
    curls(3%, 39%)
.curl-3
    curls(12%, 19%)
.curl-4
    curls(24%, 6%)
.curl-5
    curls(38%, 0%)
.right-half
  @extend .left-half
  transform-origin right
  transform rotate(180deg)
  main-color-1 = green
.text
  width 100%
  height 100%

rotationangle = 48deg
for i in (1..12)  
  .text>div:nth-child({i})
    top 43%
    left 49%
    font-family: 'Barrio', cursive;
    font-size 250%
    color main-color-2
    padding-top 50%
    background none
    transform-origin top
    transform rotate(rotationangle)
  rotationangle = rotationangle - 9
#space
  color background-color